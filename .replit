# Main configuration
run = "python3 src/main.py"
language = "python3"
entrypoint = "src/main.py"
modules = ["python-3.10:v18-20230807-322e88b"]

# Nix configuration
[nix]
channel = "stable-23_05"

# Environment variables
[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"
PYTHONUNBUFFERED = "1"

# Web server configuration
[webview]
port = 8080

# Language configuration
[languages]

[languages.python]
pattern = "**/*.py"
syntax = "python"

[languages.python.languageServer]
start = ["pylsp"]

# Files to hide
hidden = [
  ".config",
  "**/__pycache__",
  "**/.pytest_cache", 
  "**/*.pyc"
]

# Package management
[packager]
language = "python3"

[packager.features]
packageSearch = true
guessImports = true

# Hosting configuration
[hosting]
route = "/"